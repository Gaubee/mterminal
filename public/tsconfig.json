{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "target": "es2017",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "strictPropertyInitialization": true,
        "strictNullChecks": true
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}